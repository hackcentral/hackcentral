<div class="jumbotron">
  <div class="container">

    <h1 class="center"><i class="fa fa-users"></i> Organizers</h1>

    <%= render "admin/dashboards/nav" %>

    <hr>

    <br>
    <div class="row">
      <div class="col-md-6">
        <table class="table">
          <thead>
            <tr>
              <th>User</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @organizers.each do |organizer| %>
              <tr>
                <td><%= organizer.user.name %></td>
                <td><%= link_to 'Destroy', admin_hackathon_organizer_path(@hackathon, organizer), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- .col-md-6 -->

      <div class="col-md-6">
        <div class="center">
          <%= link_to 'New Organizer', admin_new_hackathon_organizer_path, class: 'btn btn-lg btn-primary' %>
        </div><!-- .center -->
      </div><!-- .col-md-6 -->
    </div><!-- .row -->

  </div><!-- .container -->
</div><!-- .jumbotron -->
